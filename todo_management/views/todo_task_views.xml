<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_todo_task_tree" model="ir.ui.view">
            <field name="name">todo.task.tree</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="state"/>
                    <field name="date_deadline"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_todo_task_form" model="ir.ui.view">
            <field name="name">todo.task.form</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <!-- -->
                            <button name="action_set_in_progress"
                                    type="object"
                                    string="Set In Progress"
                                    class="oe_highlight"
                                    attrs="{'invisible': [('state', '!=', 'draft')]}"/>

                            <button name="action_set_done"
                                    type="object"
                                    string="Done"
                                    class="oe_highlight"
                                    attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>

                            <button name="action_reset"
                                    type="object"
                                    string="Reset to Draft"
                                    attrs="{'invisible': [('state', '=', 'draft')]}"/>

                            <!--  (Status Bar) -->
                            <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                        </header>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_todo_task_search" model="ir.ui.view">
            <field name="name">todo.task.search</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="user_id"/>
                    <filter name="filter_new" string="New" domain="[['state','=','new']]"/>
                    <filter name="filter_in_progress" string="In Progress" domain="[['state','=','in_progress']]"/>
                    <filter name="filter_done" string="Completed" domain="[['state','=','done']]"/>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_todo_task_kanban" model="ir.ui.view">
            <field name="name">todo.task.kanban</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="date_deadline"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    Assigned to:
                                    <field name="user_id"/>
                                </div>
                                <div>
                                    Status:
                                    <field name="state"/>
                                </div>
                                <div>
                                    Deadline:
                                    <field name="date_deadline"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="view_todo_task_calendar" model="ir.ui.view">
            <field name="name">todo.task.calendar</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <calendar date_start="date_deadline" string="Tasks Calendar">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Action -->
        <record id="action_todo_task_tree" model="ir.actions.act_window">
            <field name="name">To-Do Tasks</field>
            <field name="res_model">todo.task</field>
            <field name="view_mode">tree,form,kanban,calendar,search</field>
        </record>


        <menuitem id="menu_todo_open_tasks" name="Open Tasks" parent="menu_todo_all_tasks"
                  action="action_todo_task_tree"/>

        <menuitem id="menu_todo_all_tasks" name="All Tasks" parent="menu_todo_root" sequence="1"/>
        <menuitem id="menu_todo_root" name="To-Do" sequence="10"/>

    </data>
</odoo>
